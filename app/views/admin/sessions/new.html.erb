<% title = 'Login' %>

<% content_for :title do %>
  <%= title %>
<% end %>

<h1><%= title %></h1>

<%= form_tag admin_sessions_path, method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </div>
  <%= submit_tag 'Login' %>
<% end %>